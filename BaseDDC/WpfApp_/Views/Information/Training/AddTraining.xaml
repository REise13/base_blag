<Window x:Class="DDC_App.Views.Information.Training.AddTraining"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDC_App.Views.Information"
        FontSize="18"
        mc:Ignorable="d"
        Background="Gainsboro"
        ResizeMode="NoResize"
       Title="Добавить нужды" Height="150.296" Width="335">
    <StackPanel Margin="0,0,2,0" Height="138" VerticalAlignment="Top">
        <Label Content="Добавить тренинг:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="TrainingName" Height="33" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <DockPanel  Height="50" VerticalAlignment="Center" LastChildFill="False">
            <Button Background="White" Margin="10"  Content="Добавить" HorizontalAlignment="Center" Width="100"  VerticalAlignment="Center"  Click="Add_Click"/>
            <Button Background="White" Margin="10"  Click="Cancel_Click" Content="Отмена" HorizontalAlignment="Center" Width="100" VerticalAlignment="Center"/>
            <StackPanel Width="100"/>
        </DockPanel>
    </StackPanel>
</Window>
