<Window x:Class="WpfApp_.Views.Information.Project.Projects"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_.Views.Information.Project"
        mc:Ignorable="d"
        FontSize="18"
        Background="Gainsboro"
        ResizeMode="CanResize"
        Title="Проекты" Height="291" Width="1008.5">
    <StackPanel>
        <Border Height="10"></Border>
        <DockPanel HorizontalAlignment="Center" Height="174"  Width="966" Margin="26,0,10,0">
            <DataGrid HorizontalAlignment="Left" x:Name="data_projects" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Проект" MinWidth="140" Width="*" Binding="{Binding Path=Title }" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <Border Height="10"></Border>
        <DockPanel HorizontalAlignment="Center">
            <Button Background="White" Margin="10"  Width="100" Click="Add_Click" Content="Добавить"></Button>
            <Button Background="White" Margin="10"  Width="100"  Click="Cancel_Click" Content="Закрыть"></Button>
        </DockPanel>
    </StackPanel>
</Window>
