<Window x:Class="WpfApp_.Views.Information.Project.AddProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_.Views.Information.Project"
        mc:Ignorable="d"
        Background="Gainsboro"
        ResizeMode="NoResize"
        FontSize="18"
        Title="Добавить проект" Height="141.33" Width="565.48">
    <StackPanel Margin="10" HorizontalAlignment="Center">
        <DockPanel >
            <Label Width="150" Content="Название"/>
            <TextBox x:Name="Name" Width="344"></TextBox>
        </DockPanel>
        <Border Height="10"></Border>
        <DockPanel HorizontalAlignment="Center">
            <Button Background="White" Margin="10"  Width="100" Content="Добавить" Click="Add_Click"/>
            <Border Width="10"></Border>
            <Button Background="White" Margin="10"  Width="100"  Click="Cancel_Click" Content="Отмена"/>
        </DockPanel>
    </StackPanel>
</Window>
